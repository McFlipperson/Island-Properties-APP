{
  "name": "geo-expert-authority-app",
  "version": "1.0.0",
  "description": "GEO-optimized expert authority lead generation system for Island Properties Philippines real estate experts",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec ts-node src/server/index.ts",
    "client:dev": "cd src/client && vite --host 0.0.0.0 --port 3000",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd src/client && npm run build",
    "start": "node dist/server/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": ["real-estate", "expert-authority", "lead-generation", "philippines", "geo-optimization"],
  "author": "Island Properties Expert System",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "drizzle-orm": "^0.28.6",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.2",
    "uuid": "^9.0.0",
    "bull": "^4.11.4",
    "redis": "^4.6.8",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/pg": "^8.10.2",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.2",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "drizzle-kit": "^0.19.13",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "jest": "^29.6.2",
    "@types/jest": "^29.5.4"
  }
}